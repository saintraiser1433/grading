# Database Configuration
# Replace 'postgres', 'YOUR_PASSWORD', and 'ggs_db' with your actual PostgreSQL credentials
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/ggs_db?schema=public"

# NextAuth Configuration
# Generate a secure secret for production: openssl rand -base64 32
NEXTAUTH_SECRET="ggs-secret-key-change-in-production-123456"
NEXTAUTH_URL="http://localhost:3000"

